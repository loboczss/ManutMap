<Window x:Class="ManutMap.OsDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes da Ordem de Serviço"
        Width="550"
        Height="Auto" 
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="#F0F2F5">
    <Border Background="White" CornerRadius="8" Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" Color="#CCCCCC" Opacity="0.4" BlurRadius="15"/>
        </Border.Effect>

        <StackPanel Margin="25">
            <TextBlock x:Name="DescExecText"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20" />

            <Separator Margin="0,0,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.Resources>
                    <Style TargetType="TextBlock" x:Key="LabelStyle">
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="#555555"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Margin" Value="0,8,20,8"/>
                    </Style>
                    <Style TargetType="TextBlock" x:Key="ValueStyle">
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Foreground" Value="#222222"/>
                        <Setter Property="Margin" Value="0,8,0,8"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Número OS:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="NumOsText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="ID SIGFI:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="IdSigfiText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Rota:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RotaText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tipo:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TipoText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Tipo SIGFI:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TipoSigfiText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Nome:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="NomeText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Reclamante:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="ReclamanteText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Abertura:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="7" Grid.Column="1" x:Name="AberturaText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Conclusão:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="8" Grid.Column="1" x:Name="ConclusaoText" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="Funcionários:" Style="{StaticResource LabelStyle}"/>
                <TextBlock Grid.Row="9" Grid.Column="1" x:Name="FuncionariosText" Style="{StaticResource ValueStyle}"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>