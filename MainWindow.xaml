<Window x:Class="ManutMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="ManutMap – Mapa de Manutenções"
        Height="600" Width="1000"
        Background="#F3F4F6">

    <Window.Resources>
        <DropShadowEffect x:Key="PanelShadow"
                      Color="#000000" BlurRadius="10"
                      Opacity="0.2" ShadowDepth="2"/>
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Width" Value="100"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,8"/>
        </Style>
        <Style x:Key="InputControl" TargetType="Control">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
            Background="White"
            CornerRadius="8"
            Effect="{StaticResource PanelShadow}"
            Padding="10">
            <DockPanel>
                <Button x:Name="DownloadButton"
                Style="{StaticResource AccentButton}"
                Content="Baixar JSON"
                Click="DownloadButton_Click"
                DockPanel.Dock="Left"/>
                <TextBlock Text="procura por 'Manutencao_AC2025'"
                   VerticalAlignment="Center"
                   Foreground="#4B5563"
                   FontSize="14"
                   Margin="10,0,0,0"/>
            </DockPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Mapa -->
            <wv2:WebView2 x:Name="MapView"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                    Width="8"
                    Background="#D1D5DB"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    ShowsPreview="True"/>

            <!-- Painel de filtros -->
            <Border Grid.Column="2"
              Background="White"
              CornerRadius="8"
              Effect="{StaticResource PanelShadow}"
              Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <TextBlock Text="Filtros"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,15"
                       Foreground="#111827"/>

                        <!-- Tipo SIGFI -->
                        <DockPanel>
                            <TextBlock Text="Tipo SIGFI:" Style="{StaticResource LabelText}"/>
                            <ComboBox x:Name="SigfiFilterCombo"
                        Style="{StaticResource InputControl}"
                        SelectionChanged="FiltersChanged"/>
                        </DockPanel>

                        <!-- Tipo Serviço -->
                        <DockPanel>
                            <TextBlock Text="Tipo Serviço:" Style="{StaticResource LabelText}"/>
                            <ComboBox x:Name="TipoFilterCombo"
                        Style="{StaticResource InputControl}"
                        SelectionChanged="FiltersChanged"/>
                        </DockPanel>

                        <!-- NumOS -->
                        <DockPanel>
                            <TextBlock Text="NumOS:" Style="{StaticResource LabelText}"/>
                            <TextBox x:Name="NumOsFilterBox"
                       Style="{StaticResource InputControl}"
                       TextChanged="FiltersChanged"/>
                        </DockPanel>

                        <!-- IDSIGFI -->
                        <DockPanel>
                            <TextBlock Text="IDSIGFI:" Style="{StaticResource LabelText}"/>
                            <TextBox x:Name="IdSigfiFilterBox"
                       Style="{StaticResource InputControl}"
                       TextChanged="FiltersChanged"/>
                        </DockPanel>

                        <!-- Rota -->
                        <DockPanel>
                            <TextBlock Text="Rota:" Style="{StaticResource LabelText}"/>
                            <TextBox x:Name="RotaFilterBox"
                       Style="{StaticResource InputControl}"
                       TextChanged="FiltersChanged"/>
                        </DockPanel>

                        <!-- Período -->
                        <DockPanel>
                            <TextBlock Text="Período:" Style="{StaticResource LabelText}"/>
                            <StackPanel Orientation="Horizontal">
                                <DatePicker x:Name="StartDatePicker"
                            Width="120"
                            SelectedDateFormat="Short"
                            Margin="0,0,10,0"
                            SelectedDateChanged="FiltersChanged"/>
                                <TextBlock Text="a"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                                <DatePicker x:Name="EndDatePicker"
                            Width="120"
                            SelectedDateFormat="Short"
                            SelectedDateChanged="FiltersChanged"/>
                            </StackPanel>
                        </DockPanel>

                        <!-- Camadas e cores -->
                        <DockPanel>
                            <TextBlock Text="Camadas:" Style="{StaticResource LabelText}"/>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <CheckBox x:Name="ChbOpen"
                            Content="Aberto"
                            IsChecked="True"
                            Checked="FiltersChanged"
                            Unchecked="FiltersChanged"
                            Margin="0,0,10,0"/>
                                    <TextBox x:Name="TxtColorOpen"
                           Width="80"
                           Text="#FF0000"
                           TextChanged="FiltersChanged"
                           ToolTip="Cor dos abertos"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox x:Name="ChbClosed"
                            Content="Concluído"
                            IsChecked="True"
                            Checked="FiltersChanged"
                            Unchecked="FiltersChanged"
                            Margin="0,0,10,0"/>
                                    <TextBox x:Name="TxtColorClosed"
                           Width="80"
                           Text="#008000"
                           TextChanged="FiltersChanged"
                           ToolTip="Cor dos concluídos"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
