<Window x:Class="ManutMap.ShareDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exportar Dados" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f0f0f0">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Como deseja exportar os dados?" FontWeight="Bold" FontSize="16" Margin="0,0,0,15" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnHtml" Width="150" Margin="5" Click="BtnHtml_Click">
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="30" Text="&#xE790;" HorizontalAlignment="Center"/>
                        <TextBlock Text="Mapa HTML" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="BtnCsv" Width="150" Margin="5" Click="BtnCsv_Click">
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="30" Text="&#xE7C3;" HorizontalAlignment="Center"/>
                        <TextBlock Text="Arquivo CSV" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
        <Button x:Name="BtnCancel" Grid.Row="1" Content="Cancelar" Width="80" HorizontalAlignment="Right" Margin="0,15,0,0" Click="BtnCancel_Click"/>
    </Grid>
</Window>
